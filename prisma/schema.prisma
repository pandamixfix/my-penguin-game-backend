// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") // Prisma возьмет строку подключения из нашего .env
}

// Описываем нашу таблицу. Название и поля должны ТОЧНО совпадать
model players_fidele_game {
  id          BigInt   @id
  created_at  DateTime @default(now()) @db.Timestamptz(6)
  name        String?  @db.Text
  score       BigInt?  @default(0)
}